/* pages/own/own.wxss */
.useInfo{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 300rpx;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx;
  border-bottom-style:dotted;
  border-bottom-color:gainsboro;
}
.useInfo image{
  width:200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.useInfo text{
  font-size: 45rpx;
  color: rgb(126, 125, 138);
  font-weight: bold;
}

.collection{
  display: flex;
  flex-direction: column;
}
.collection .title{
  font-size:30rpx;
  color: rgb(126, 125, 138);
  margin-left: 15rpx; 
  border-bottom: 1rpx;
  border-bottom-style:dotted;
  border-bottom-color:gainsboro;
}

.pic_block text{
  font-size: 30rpx;
  width:180rpx;
  color: rgb(252, 169, 62);
  text-align: center;
  border-bottom: 2rpx;
  border-bottom-style:dotted;
  border-bottom-color:gainsboro;
}