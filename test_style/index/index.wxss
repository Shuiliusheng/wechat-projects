.intro {
  margin: 30px;
  text-align: center;
}
.box{
 width:100%;
  height:95rpx;
  background:#ffffff;
  border-radius:10rpx;
  padding:0 20rpx 0 30rpx;
  box-sizing:border-box;
  display:flex;
  justify-content:space-between;
  align-items:center;
  margin-bottom:30rpx;
}
.item{
  width:500rpx;
  height:30rpx;
  background:rgba(247, 190, 75, 0.6);
  border-radius:15rpx;
  margin-right:20rpx;
  position:relative;
}
.progress-item{
  position:absolute;
  top:0;
  left:0;
  height:100%;
  background:rgba(247, 190, 75, 0.6);
  border-radius:15px;

}